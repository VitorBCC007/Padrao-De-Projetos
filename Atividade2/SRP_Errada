class Funcionario:
    def __init__(self, nome, salario):
        self.nome = nome
        self.salario = salario

    def calcular_salario(self):
        return self.salario * 1.1  # Adiciona um aumento de 10%

    def enviar_email(self, mensagem):
        print(f"Enviando e-mail para {self.nome}: {mensagem}")

funcionario = Funcionario("João", 1000)
novo_salario = funcionario.calcular_salario()
funcionario.enviar_email(f"Seu novo salário é {novo_salario}")

#Funcionario tem mais de 1 responsabilidade
