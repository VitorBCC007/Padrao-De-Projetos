// Classe que viola o OCP
//Não está aberta para extensão e fechada para modificação
public class Calculadora {   
    public double calcular(double num1, double num2, String operador) {
        double resultado = 0;
        switch (operador) {
            case "+":
                resultado = num1 + num2;
                break;
            case "-":
                resultado = num1 - num2;
                break;
            case "*":
                resultado = num1 * num2;
                break;
            case "/":
                resultado = num1 / num2;
                break;
        } 
        return resultado;
    }
}
