class Pagamento:
    def pagar(self, valor, metodo):
        if metodo == 'cartao':
            print(f"Pago R$ {valor} via cartão.")
        elif metodo == 'paypal':
            print(f"Pago R$ {valor} via PayPal.")

pagamento = Pagamento()
pagamento.pagar(100, 'cartao')

#A adição de um NOVO método de pagamento requer a modificação (direta da classe)
